@model LatinMedia.Core.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<div class="section-headline-wrap">
    <div class="section-headline">
        <h2> ورود</h2>
        <p><a href="/">صفحه اصلی</a><span class="separator">/</span><span class="current-section">ورود</span></p>
    </div>
</div>

<div class="section-wrap text-center">
    <div class="section demo">

        <div class="form-popup ">

            <!-- FORM POPUP HEADLINE -->
            <div class="form-popup-headline primary">
                <h2>ورود به سایت</h2>

            </div>
            <!-- /FORM POPUP HEADLINE -->
            <!-- FORM POPUP CONTENT -->
            @if (ViewBag.IsSuccess != null)
            {
                <script>
                    swal("موفق", "ورود با موفقیت انجام شد", "success");

                    // Your delay in milliseconds
                    var delay = 3000;
                    setTimeout(function () { window.location = "https://localhost:44391/"; }, delay);
                </script>

            }

            @if (ViewBag.ChangeMail == true)
            {
                <script>
                    swal("نهایی کردن تغییر ایمیل", "ایمیلی حاوی اطلاعات تغییر ایمیل برای شما ارسال شد", "success");


                </script>
            }
            @if (ViewBag.EditProfile == true)
            {
                <script>
                    swal("اطلاعات کاربری با موفقیت به روزرسانی شد", "جهت بارگذاری اطلاعات پروفایل دوباره لاگین کنید", "success");


                </script>
            }
            @if (ViewBag.Permission == false)
            {
                <script>
                    swal("خطای دسترسی !", "شما مجوز دسترسی به این قسمت را ندارید", "error");


                </script>
            }

            <div class="form-popup-content">
                <form asp-action="Login" method="post">



                    <label>ایمیل</label>
                    <input type="text" asp-for="Email" placeholder="ایمیل خود را وارد کنید">
                    <span asp-validation-for="Email"></span>

                    <label>کلمه عبور</label>
                    <input type="text" asp-for="Password" placeholder="کلمه عبور خود را وارد کنید">
                    <span asp-validation-for="Password"></span>


                    <input type="checkbox" asp-for="RememberMe" checked="">
                    <label class="label-check" for="RememberMe">
                        <span class="checkbox primary primary"><span></span></span>
                        مرا به خاطر بسپار
                    </label>
                    <p>رمزتان را گم کرده‌اید؟ <a href="/ForgotPassword" class="primary">اینجا کلیک کنید</a></p>
                    <br />
                    <input type="submit" class="button mid secondary-dark" value="ورود" />


                </form>
            </div>
            <!-- /FORM POPUP CONTENT -->
        </div>






        <div class="clearfix"></div>
    </div>
</div>

