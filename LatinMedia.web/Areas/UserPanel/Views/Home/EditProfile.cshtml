
@model LatinMedia.Core.ViewModels.EditProfileViewModel

@{
    ViewData["Title"] = "ویرایش آطلاعات کاربری";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

    <div class="content">
        <div class="container-fluid">
            <form asp-action="EditProfile" enctype="multipart/form-data">
                <input type="hidden" asp-for="AvatarName" />
                <div class="row">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header card-header-primary">
                                <h4 class="card-title">ویرایش اطلاعات کاربری</h4>
                                <p class="card-category"></p>
                            </div>
                            <div class="card-body">

                                <div class="row">

                                    <div class="col-md-3">
                                        <div class="form-group bmd-form-group">
                                            <label class="bmd-label-floating">Username</label>
                                            <input class="form-control" asp-for="FirstName" type="text">
                                        </div>
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group bmd-form-group">
                                            <label class="bmd-label-floating">Last Name</label>
                                            <input class="form-control" asp-for="LastName" type="text">
                                        </div>
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group bmd-form-group">
                                            <label class="bmd-label-floating">شماره تماس</label>
                                            <input class="form-control" asp-for="Mobile" type="text">
                                        </div>
                                        <span asp-validation-for="Mobile" class="text-danger"></span>
                                    </div>
                                </div>



                                <button class="btn btn-primary pull-right" type="submit">ذخیره اطلاعات</button>
                                <div class="clearfix"></div>

                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card card-profile">
                            <div class="card-avatar">
                                <a href="#pablo">
                                    <img class="img" src="/UserAvatar/@Model.AvatarName">
                                </a>
                            </div>
                            <div class="card-body">
                                <input asp-for="UserAvatar" />
                                <p class="help text-danger">انتخاب عکس جهت پروفایل کاربری</p>
                            </div>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>

